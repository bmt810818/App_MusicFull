<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffff"
            android:textSize="17sp"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/txtvPlaynhacindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ffff"
            android:textSize="17sp"
            android:text="ten ca khuc"
            android:maxLines="2"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/txtvPlaynhacindex"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtvPlaynhactenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffff"
            android:text="ca si"
            android:singleLine="true"
            android:layout_toRightOf="@+id/txtvPlaynhacindex"
            android:layout_below="@+id/txtvPlaynhactenbaihat"
            android:ellipsize="end"
            android:id="@+id/txtvTencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>