<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imgBacgroundPlaylist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <View
        android:background="@drawable/custom_bgr_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <ImageView
        android:id="@+id/imgPlaylist"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/imgBacgroundPlaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:textSize="13sp"
        android:text="nhung bai hit cu"
        android:layout_alignBottom="@id/imgPlaylist"
        android:layout_toRightOf="@+id/imgPlaylist"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/txtvTenplaylist"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>